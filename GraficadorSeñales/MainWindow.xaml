<Window x:Class="GraficadorSeñales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraficadorSeñales"
        mc:Ignorable="d"
        Title="SEÑAL SENOIDAL [GRAFICA]" Height="617" Width="596">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="529*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Amplitud" HorizontalAlignment="Left" Margin="9,73,0,0" TextWrapping="Wrap" Text="Amplitud" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="167,76,0,0" TextWrapping="Wrap" Text="Fase" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="314,79,0,0" TextWrapping="Wrap" Text="Frecuencia" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="txtAmplitud" HorizontalAlignment="Left" Height="23" Margin="9,106,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="167,106,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="314,106,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Grid x:Name="txtFase" Grid.ColumnSpan="2">
            <TextBlock x:Name="TiempoInicial" HorizontalAlignment="Left" Margin="70,149,0,0" TextWrapping="Wrap" Text="Tiempo Inicial" VerticalAlignment="Top"/>
            <TextBlock x:Name="Fase" HorizontalAlignment="Left" Margin="224,76,0,0" TextWrapping="Wrap" Text="Fase" VerticalAlignment="Top"/>
            <TextBlock x:Name="Frecuencia" HorizontalAlignment="Left" Margin="371,79,0,0" TextWrapping="Wrap" Text="Frecuencia" VerticalAlignment="Top"/>
            <TextBox x:Name="txtTiempoInicial" HorizontalAlignment="Left" Height="23" Margin="70,178,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtFase1" HorizontalAlignment="Left" Height="23" Margin="224,106,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txtFrecuencia" HorizontalAlignment="Left" Height="23" Margin="371,106,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="TiempoFinal" HorizontalAlignment="Left" Margin="224,149,0,0" TextWrapping="Wrap" Text="Tiempo Final" VerticalAlignment="Top" RenderTransformOrigin="1.55,0.313"/>
            <TextBox x:Name="txtTiempoFinal" HorizontalAlignment="Left" Height="23" Margin="224,178,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="Muestreo" HorizontalAlignment="Left" Margin="371,149,0,0" TextWrapping="Wrap" Text="Frecuencia de muestreo" VerticalAlignment="Top" RenderTransformOrigin="1.55,0.313"/>
            <TextBox x:Name="txtMuestreo" HorizontalAlignment="Left" Height="23" Margin="371,178,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="btnGraficar" Content="GRAFICAR" HorizontalAlignment="Left" Margin="151,238,0,0" VerticalAlignment="Top" Width="75" Click="btnGraficar_Click"/>
            <ScrollViewer x:Name="Scroll" HorizontalAlignment="Left" Height="218" Margin="119,283,0,0" VerticalAlignment="Top" Width="431" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
                <Grid>
                <Polyline Stroke="Black" StrokeThickness="3" Name="plnGrafica"/>
                <Polyline Stroke="Red" StrokeThickness="0.5" Name="plnEjeX"/>
                <Polyline Stroke="Green" StrokeThickness="0.5" Name="plnEjeY"/>
                </Grid>
            </ScrollViewer>
            <Button x:Name="btnRampa" Content="Graficar Rampa" HorizontalAlignment="Left" Margin="329,238,0,0" VerticalAlignment="Top" Width="98" Click="btnRampa_Click"/>
            <TextBlock x:Name="lblAmplitudMaximaPositiva" HorizontalAlignment="Left" Margin="26,270,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
            <TextBlock x:Name="lblAmplitudMaximaNegativa" HorizontalAlignment="Left" Margin="26,471,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
            <TextBlock x:Name="lblAmplitudCero" HorizontalAlignment="Left" Margin="26,363,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

        </Grid>

    </Grid>
</Window>
